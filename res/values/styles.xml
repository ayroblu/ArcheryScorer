<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Black">
        <item name="android:buttonStyle">@style/ICSButton</item>
        <item name="android:editTextStyle">@style/ICSEditText</item>
        <item name="android:textViewStyle">@style/ICSTextView</item>
    </style>
    
    <style name="SettingsTheme" parent="android:Theme.Black">
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="ICSTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_sp</item>
    </style>
        
    <style name="ICSButton">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textSize">@dimen/text_size_sp</item>
        <item name="android:textColor">@drawable/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="ICSEditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textSize">@dimen/text_size_sp</item>
        <item name="android:textColor">@drawable/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>